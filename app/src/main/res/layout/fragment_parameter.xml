<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设备号：" />


        <com.station.nurse.newtestprj.view.NiceSpinner
            app:textTint="@color/black"
            app:backgroundSelector="@drawable/arc_bg"
            android:id="@+id/param_num"
            android:layout_width="120dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="总量：" />

        <EditText
            android:inputType="number"
            android:id="@+id/param_total"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/arc_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="ml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="流速：" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/param_speed"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/arc_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="ml/h" />
    </LinearLayout>

    <Button
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="20dp"
        android:text="发送"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/param_send" />


</LinearLayout>
